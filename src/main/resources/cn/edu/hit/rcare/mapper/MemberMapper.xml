<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.hit.rcare.mapper.MemberMapper">

    <!--    按更新成员信息-->
    <update id="update">
        update member
        <set>
            <if test="name != null and name != ''">
                name=#{name},
            </if>
            <if test="gender != null">
                gender=#{gender},
            </if>
            <if test="age != null">
                age=#{age},
            </if>
            <if test="address != null and address != ''">
                address=#{address}
            </if>
        </set>
        where id=#{id}
    </update>

    <!--    按id列表删除成员-->
    <delete id="delete">
        delete from member where id in
            <foreach collection="ids" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
    </delete>

    <!--    条件查询-->
    <select id="list" resultType="cn.edu.hit.rcare.pojo.Member">
        select id, name, gender, age, address from member
        <where>
            <if test="name != null and name != ''">
                name like concat('%', #{name}, '%')
            </if>
            <if test="gender != null">
                and gender=#{gender}
            </if>
            <if test="ageBegin != null and ageEnd != null">
                and age between #{ageBegin} and #{ageEnd}
            </if>
            <if test="address != null and address != ''">
                and address like concat('%', #{address}, '%')
            </if>
        </where>
        order by id
    </select>
</mapper>